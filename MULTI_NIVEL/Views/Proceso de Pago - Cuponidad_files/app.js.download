var carouselCategoriasMobile = new Carousel({
    elem: 'categorias-carousel-mobile',    // id of the carousel container
    autoplay: true,     // starts the rotation automatically
    infinite: true,      // enables the infinite mode
    interval: 5000,      // interval between slide changes
    initial: 0,          // slide to start with
    dots: false,          // show navigation dots
    arrows: true,        // show navigation arrows
    slides: 5,
    slideWidth: 90,
    touch: true,
    resize: true,
    arrowPrev: 'arrowPrev-navTag-mobile',
    arrowNext: 'arrowNext-navTag-mobile'
});

carouselCategoriasMobile.init();

